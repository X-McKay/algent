[project]
name = "algent"
version = "0.1.0"
description = "An agent-based system for autonomous task execution"
authors = [
    {name = "Al McKay", email = "aldmckay@gmail.com"}
]
dependencies = [
    "asyncio",
    "aiohttp>=3.8.0",
    "redis>=5.0.0",
    "fastapi>=0.104.0",
    "uvicorn>=0.24.0",
    "pydantic>=2.0.0",
    "cryptography>=41.0.0",
    "PyJWT>=2.8.0",
    "sqlalchemy>=2.0.0",
    "asyncpg>=0.29.0",
    "setuptools>=80.9.0",
]
requires-python = ">=3.12"

[project.optional-dependencies]
dev = [
    "pytest>=7.4.0",
    "pytest-asyncio>=0.21.0",
    "black>=23.0.0",
    "isort>=5.12.0",
    "mypy>=1.7.0",
]

[tool.hatch.build.targets.wheel]
      packages = ["src/"]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.black]
line-length = 88
target-version = ["py38"]

[tool.isort]
profile = "black"
multi_line_output = 3

[tool.mypy]
python_version = "3.13"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true 
